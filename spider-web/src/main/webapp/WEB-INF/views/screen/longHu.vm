<div id="content">
  <div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> 首页</a> <a href="#">资讯管理</a> <a href="#" class="current">龙虎榜管理</a> </div>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
            <h5>龙虎榜--${tradeDate}</h5>
			<a class="label label-info" style="line-height:20px;"></a>
          </div>
		  <div class="widget-content nopadding">
			<form id="searchForm" action="#springUrl('/longhu/')" method="get" class="form-horizontal">
                <div class="search_option">
					<div>
                        <label>日期：</label>
                        <span><input id="tradeDate" style="width:100%" name="tradeDate" type="text" value="$!{tradeDate}"/></span>
					</div>
                    <div>
                        <button type="submit"  class="btn btn-success">搜索</button>
                    </div>
                </div>
			</form>
          </div>
          <div class="widget-content">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
				  <th style="width:5%;">序号</th>
                  <th>代码</th>
				  <th>股票</th>
                  <th>收盘价</th>
				  <th>涨跌幅</th>
				  <th>换手率</th>
				  <th>买入(万)</th>
				  <th>卖出(万)</th>
				  <th>净买入(万)</th>
				  <th>帮派</th>
                </tr>
              </thead>
              <tbody>
				#foreach($lh in ${lhList})
                <tr symbol="$!{lh.symbol}">
				  <td>$!{velocityCount}</td>
                  <td><a class="lh_detail" onclick="javascript:;">$!{lh.symbol}</a></td>
                  <td><a class="lh_detail" onclick="javascript:;">$!{lh.stockName}</a></td>
				  <td>$!{lh.price}</td>
				  <td>$!{lh.chgPercent}</td>
				  <td>$!{lh.turnover}</td>
				  <td style="color:red">$!{lh.drBuyAmt}</td>
				  <td style="color:green">$!{lh.drSellAmt}</td>
				  <td>$!{lh.drNetBuy}</td>
				  <td></td>
                </tr>
				#end
              </tbody>
             </table>
			 <div id="page_nav"></div>
			</div>
          </div>
        </div>
    </div>
  </div>
</div>
<script type="text/javascript">
	$(function(){
		$(".lh_detail").click(function(){
			var symbol = $(this).parent().parent().attr("symbol");
			window.location.href="#springUrl('/longhu/detail')?symbol="+symbol+"&tradeDate=${tradeDate}";
		});
	});
</script>
