<div id="content">
  <div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> 首页</a> <a href="#">龙虎榜</a> <a href="#" class="current">${longHu.stockName}--[${longHu.symbol}]--${longHu.tradeDate}</a> </div>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span8">
        <div class="widget-box">
          #foreach($lhType in $drTypeList)
		  <div class="widget-title">
            <h5>上榜理由：$lhType</h5>
          </div>
		  #end
		  <div class="widget-title"> <span class="icon"> <i class="icon-eye-open"></i> </span>
            <h5>买入营业部</h5>
          </div>
		  <div class="widget-content nopadding">
            <table class="table table-bordered">
              <thead>
                <tr>
				  <th>编号</th>	
                  <th>营业部</th>
                  <th>买入</th>
				  <th>卖出</th>
				  <th>帮派</th>
                </tr>
              </thead>
              <tbody>
				#foreach($buyDetail in ${buyList})
                <tr>
                  <td>$!{velocityCount}</td>
                  <td secCode="${buyDetail.secDeptCode}">$!{buyDetail.secDeptAddr}</td>
				  <td style="color:red">$!{buyDetail.buyAmt}</td>
				  <td style="color:green">$!{buyDetail.sellAmt}</td>
				  <td></td>
                </tr>
                #end
              </tbody>
            </table>
          </div>
		  <div class="widget-title"> <span class="icon"> <i class="icon-eye-open"></i> </span>
            <h5>卖出营业部</h5>
          </div>
          <div class="widget-content nopadding">
            <table class="table table-bordered">
              <thead>
                <tr>
				  <th>编号</th>	
                  <th>营业部</th>
				  <th>卖出</th>
                  <th>买入</th>
				  <th>帮派</th>
                </tr>
              </thead>
              <tbody>
				#foreach($sellDetail in ${sellList})
                <tr>
                  <td>$!{velocityCount}</td>
                  <td secCode="${sellDetail.secDeptCode}">$!{sellDetail.secDeptAddr}</td>
				  <td style="color:green">$!{sellDetail.sellAmt}</td>
				  <td style="color:red">$!{sellDetail.buyAmt}</td>
				  <td></td>
                </tr>
                #end
              </tbody>
            </table>
          </div>		  
        </div>
      </div>
    </div>
  </div>
</div>
<script src="#resources('layer/layer.js')"></script>
